<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:focusableInTouchMode="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/recntangle_text_view_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDonor"
                    android:paddingLeft="@dimen/_4ssp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangel_text_view"
                    android:gravity="center_vertical"
                    android:includeFontPadding="true"
                    android:lines="1"
                    android:layout_margin="@dimen/_2ssp"
                    android:text="Donors"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:typeface="normal" />

                <ImageButton
                    android:id="@+id/menu_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_margin="@dimen/_2ssp"
                    android:background="@drawable/circle_text_view"
                    android:src="@drawable/ic_baseline_more_vert_24">

                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/recntangle_text_view_content"
                android:id="@+id/layDefaultMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2ssp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgPicture"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:src="@drawable/profile"></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/recntangle_text_view_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2ssp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_4ssp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Members"
                            android:textColor="@color/md_green_900"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvStoreName"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:lines="4"
                            android:maxLines="3"
                            android:text="Address"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_5ssp"
                android:paddingBottom="10dip"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4ssp">

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.90"
                    android:text="Email"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Contact No"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>