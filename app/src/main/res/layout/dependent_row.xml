<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:focusableInTouchMode="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:id="@+id/layDefaultMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDependent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="true"
                    android:textStyle="bold"
                    android:lines="1"
                    android:text="Dependent Name"
                    android:textAllCaps="true"
                     />


                <TextView
                    android:id="@+id/tvRelation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_4ssp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="Member"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:layout_weight="0.90"
                        android:text="Birth Date"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:visibility="gone"
                        android:text="Age"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <ImageButton
                    android:id="@+id/btnRemove"
                    android:layout_width="@dimen/_32ssp"
                    android:layout_height="@dimen/_32ssp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_delete_24"></ImageButton>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>