<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layDefaultMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangel_text_view"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5ssp">

                        <TextView
                            android:id="@+id/tvReceiptNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="true"
                            android:lines="1"
                            android:paddingLeft="@dimen/_4ssp"
                            android:text="Receipt No"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/tvReceiptDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:includeFontPadding="true"
                            android:lines="1"
                            android:text="Receipt Date"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:typeface="normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/recntangle_text_view_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_4ssp">

                        <TextView
                            android:id="@+id/tvDonor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="1"
                            android:text="Members"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvStoreName"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:gravity="center_horizontal"
                            android:lines="4"
                            android:maxLines="4"
                            android:text="Address"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_5ssp"
                android:paddingBottom="10dip"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_6ssp">


                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Pay-Mode"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Amount"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>